<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <corners
                android:radius="15dip" />
            <gradient
                android:angle="90"
                android:startColor="#DC2D24"
                android:endColor="#FFFFFF" />
            <padding
                android:left="15dip"
                android:top="15dip"
                android:right="15dip"
                android:bottom="15dip" />
        </shape>
    </item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <corners
                android:radius="15dip" />
            <gradient
                android:angle="90"
                android:startColor="#FF3428"
                android:endColor="#FFFFFF" />
            <padding
                android:left="15dip"
                android:top="15dip"
                android:right="15dip"
                android:bottom="15dip" />
        </shape>
    </item>
</selector>