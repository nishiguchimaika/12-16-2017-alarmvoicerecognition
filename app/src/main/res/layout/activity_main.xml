<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView9"
                android:src="@drawable/hosizora"
                android:scaleType="fitXY"/>

            </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/timePicker"
                android:layout_alignStart="@+id/timePicker"
                android:foregroundGravity="center_vertical"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom">
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:gravity="center">

            <ImageButton
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="startBtn"
                android:text="Start"
                android:layout_alignTop="@+id/sound"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:src="@drawable/start2"
                android:scaleType="fitCenter"
                android:background="#f0bb39"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:padding="16dp"/>

            <ImageButton
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="stopBtn"
                android:text="Stop"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/sound"
                android:layout_toStartOf="@+id/sound"
                android:layout_weight="1"
                android:src="@drawable/cancel"
                android:scaleType="fitCenter"
                android:background="#f0bb39"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:padding="16dp"/>

            <ImageButton
                android:id="@+id/sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="soundBtn"
                android:src="@drawable/sound2"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="#f0bb39"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:padding="16dp"/>

        </LinearLayout>


    </FrameLayout>


</LinearLayout>



